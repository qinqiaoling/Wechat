.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.header{
  padding: 80rpx 0;
}
.header image{
  width: 400rpx;
  height: 300rpx;
  /* border-radius: 50%; */
}
.content{
  border-top: 1px solid #ccc;
  padding: 20rpx 0;
}
.content text{
  display: block;
  padding: 10rpx 0;
}
.accredit{
  border-radius: 80rpx;
  width: 100%;
  font-size: 36rpx;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

