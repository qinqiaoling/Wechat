/* pages/component/product/product.wxss */
.modules_flex{
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  padding: 10rpx 0 60rpx 0;
}
.modules_flex_view{
  flex: 1;
}
.modules_flex_view.product{
  flex: 0 0 50%;
  font-size:28rpx;
  position:relative;
  align-items:center;
  justify-content:center;
  color:#000000;
  overflow: hidden;
}
.modules_flex_view.product .product_nav{
  display: block;
  text-align: center;
  padding: 20rpx;
  height: 400rpx;
  overflow: hidden;
}
.modules_flex_view.product .product_nav text{
  padding: 20rpx 20rpx 0 20rpx;
  display: block;
  text-align: center;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.nav_wrap{
  display: flex;
  width: 100%;
  overflow: hidden;
}
.nav_wrap_flex{
  flex: 1;
  align-items: center;
  justify-content: center;
  border: 1px solid #cccccc;
  box-sizing: border-box;
  overflow: hidden;
  height: 360rpx;
}
.modules_flex_view.product .product_nav image{
  max-width: 100%;
  max-height: 100%;
  width: 100%;
  height: 360rpx;
}